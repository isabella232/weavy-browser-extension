{
  "author": "Incentive Inc.",
  "manifest_version": 2,
  "name": "Weavy Browser Extension",
  "short_name": "Weavy",
  "version": "1.0.0",
  "description": "Browser extension for Weavy.",
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "browser_action": {
    "default_title": "Weavy",
    "default_icon": {
      "19": "images/logo19.png",
      "32": "images/logo32.png",
      "38": "images/logo38.png"
    }
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "https://*/*",
    "http://*/*",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}